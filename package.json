{
  "name": "@tryloop/visual-test",
  "version": "2.0.0",
  "description": "Intelligent visual regression testing for React PRs using Claude AI",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build dist/index.js -o dist-final --source-map && cp -r dist-final/* dist/ && rm -rf dist-final",
    "package": "npm run build && git add dist",
    "test": "jest",
    "test:local": "ts-node test/local-runner.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf dist"
  },
  "keywords": [
    "github-action",
    "react",
    "firebase",
    "visual-testing",
    "playwright",
    "pr-verification"
  ],
  "author": "TryLoop",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@anthropic-ai/sdk": "^0.20.0",
    "@playwright/test": "^1.41.2",
    "firebase-admin": "^12.0.0",
    "playwright": "^1.41.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^18.19.39",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vercel/ncc": "^0.38.1",
    "commander": "^11.1.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/**/*",
    "action.yml",
    "README.md"
  ],
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
